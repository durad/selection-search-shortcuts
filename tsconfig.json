{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": ".",
    "rootDir": ".",
    "lib": ["ES2020", "DOM"],
    "types": ["chrome"],
    "inlineSourceMap": true,
    "inlineSources": true
  },
  "include": ["*.ts"],
  "exclude": ["node_modules"]
}
